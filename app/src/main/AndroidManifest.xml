<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.videoconference">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoConference"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.OutgoingInvitationActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="locked" />
        <activity
            android:name=".activities.IncomingInvitationActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="locked" />
        <activity
            android:name=".activities.SignInActivity"
            android:exported="true"

            android:launchMode="singleTask"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="locked"
            android:theme="@style/Theme.VideoConference"/>
        <activity
            android:name=".activities.Main"
            android:exported="true"
            android:theme="@style/Theme.VideoConference"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".activities.JitsiActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="locked" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".firebase.FBMessageService"
            android:exported="true">

            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="org.jitsi.meet.sdk.ConnectionService"
            android:exported="false"/>

        <receiver
            android:name=".notification.NotificationReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped"

            tools:ignore="ExportedReceiver" />

    </application>

</manifest>